<%= turbo_frame_tag 'show_article' do %>
  <div id="<%= dom_id post %>">
    <p>
      <strong>Title:</strong>
      <%= post.title %>
    </p>

    <p>
      <strong>Body:</strong>
      <%= post.body %>
    </p>

  </div>
  <div id="comments">
    <h3>Comments:</h3>
    <%= render post.comments %>
  </div>
  <%= turbo_frame_tag 'new_comment', src: new_post_comment_path(post) %>
<% end %>
