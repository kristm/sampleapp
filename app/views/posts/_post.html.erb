<%= turbo_frame_tag 'show_article' do %>
  <div id="<%= dom_id post %>">
    <p>
      <strong>Title:</strong>
      <%= post.title %>
    </p>

    <p>
      <strong>Body:</strong>
      <%= post.body %>
    </p>

  </div>
  <div class="comments">
    <h3>Comments:</h3>
    <% post.comments.each do |comment| %>
      <p>
        <%= comment.comment %>
        <strong>Author: <%= comment.author %></strong>
      </p>
    <% end %>

    <%= turbo_frame_tag 'new_comment' do %>
      <%= link_to "Add comment",  new_post_comment_path(post) %>
    <% end %>
  </div>
<% end %>
