<%= turbo_frame_tag 'new_comment' do %>
  <h1>New Comment</h1>
  <%= form_with(model: [@post, @comment]) do | f | %>
    <div>
      <%= f.label "Comment:" %>
      <%= f.text_field :comment %>
    </div>
    <br/>
    <div>
      <%= f.label "Author:" %>
      <%= f.text_field :author %>
    </div>
    <br/>
    <%= f.submit %>
  <% end %>
<% end %>
